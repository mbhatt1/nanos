{
  "policy": {
    "version": "1.0",
    "name": "{{PROJECT_NAME}}",
    "description": "LangChain agent policy with LLM API access"
  },
  "capabilities": {
    "heap": {
      "enabled": true,
      "max_objects": 1000,
      "max_size_bytes": 10485760
    },
    "network": {
      "enabled": true,
      "allowed_hosts": [
        "api.openai.com",
        "api.anthropic.com"
      ],
      "allowed_ports": [443],
      "protocols": ["https"]
    },
    "filesystem": {
      "enabled": false
    },
    "environment": {
      "allowed_vars": [
        "OPENAI_API_KEY",
        "ANTHROPIC_API_KEY"
      ]
    }
  },
  "rules": [
    {
      "name": "allow-heap-operations",
      "effect": "allow",
      "actions": ["heap:alloc", "heap:read", "heap:write", "heap:delete"],
      "resources": ["*"]
    },
    {
      "name": "allow-llm-api",
      "effect": "allow",
      "actions": ["network:connect", "network:send", "network:receive"],
      "resources": ["https://api.openai.com/*", "https://api.anthropic.com/*"]
    },
    {
      "name": "allow-env-vars",
      "effect": "allow",
      "actions": ["env:read"],
      "resources": ["OPENAI_API_KEY", "ANTHROPIC_API_KEY"]
    }
  ]
}
