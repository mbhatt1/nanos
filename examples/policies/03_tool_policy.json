{
  "version": "1.0",
  "fs": {
    "read": [
      "/usr/**",
      "/lib/**",
      "/bin/**",
      "/etc/**",
      "/proc/self/**"
    ],
    "write": [
      "/tmp/**"
    ]
  },
  "tools": {
    "allow": [
      "add",
      "concat",
      "http_get",
      "http_post",
      "file_read"
    ],
    "deny": [
      "shell_exec"
    ]
  },
  "budgets": {
    "heap_objects": 1000,
    "heap_bytes": 10485760,
    "tool_calls": 100,
    "tokens": 100000,
    "wall_time_ms": 60000
  },
  "profiles": ["tier1-musl"]
}
